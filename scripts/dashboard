#!/usr/bin/env bash
# Start the AgentFlow web dashboard.
#
# Usage:
#   scripts/dashboard                              # start on port 8080
#   scripts/dashboard --port 9000                  # custom port
#   scripts/dashboard --config /path/to/config.json
#   scripts/dashboard --reload                     # auto-reload for dev
#   scripts/dashboard --help                       # show all options

set -euo pipefail

REPO_ROOT="$(cd "$(dirname "$0")/.." && pwd)"

PYTHON="${REPO_ROOT}/.venv/bin/python3"
[[ -x "$PYTHON" ]] || PYTHON=python3

exec env PYTHONPATH="$REPO_ROOT" "$PYTHON" -m afl.dashboard "$@"
