/** Aggregates individual South American country OSM data downloads. */
namespace osm.geo.SouthAmerica.cache {
  use osm.types
  use osm.geo.cache.SouthAmerica

  /** Caches each South American country individually in parallel. */
  facet SouthAmericaIndividually () => (cache: [OSMCache]) andThen {

    argentina = Argentina()
    bolivia = Bolivia()
    brazil = Brazil()
    chile = Chile()
    colombia = Colombia()
    ecuador = Ecuador()
    guyana = Guyana()
    paraguay = Paraguay()
    peru = Peru()
    suriname = Suriname()
    uruguay = Uruguay()
    venezuela = Venezuela()

    yield SouthAmericaIndividually(cache = argentina.cache ++
                                   bolivia.cache ++
                                   brazil.cache ++
                                   chile.cache ++
                                   colombia.cache ++
                                   ecuador.cache ++
                                   guyana.cache ++
                                   paraguay.cache ++
                                   peru.cache ++
                                   suriname.cache ++
                                   uruguay.cache ++
                                   venezuela.cache)
  }
}
