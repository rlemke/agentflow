/** Aggregates individual Canadian province and territory OSM data downloads. */
namespace osm.geo.Canada.cache {
  use osm.types
  use osm.geo.cache.Canada

  /** Caches each Canadian province and territory individually in parallel. */
  facet CanadaIndividually () => (cache: [OSMCache]) andThen {

    alberta = osm.geo.cache.Canada.Alberta()
    britishColumbia = osm.geo.cache.Canada.BritishColumbia()
    manitoba = osm.geo.cache.Canada.Manitoba()
    newBrunswick = osm.geo.cache.Canada.NewBrunswick()
    newfoundlandAndLabrador = osm.geo.cache.Canada.NewfoundlandAndLabrador()
    novaScotia = osm.geo.cache.Canada.NovaScotia()
    ontario = osm.geo.cache.Canada.Ontario()
    princeEdwardIsland = osm.geo.cache.Canada.PrinceEdwardIsland()
    quebec = osm.geo.cache.Canada.Quebec()
    saskatchewan = osm.geo.cache.Canada.Saskatchewan()
    yukon = osm.geo.cache.Canada.Yukon()

    yield CanadaIndividually(cache = alberta.cache ++
                             britishColumbia.cache ++
                             manitoba.cache ++
                             newBrunswick.cache ++
                             newfoundlandAndLabrador.cache ++
                             novaScotia.cache ++
                             ontario.cache ++
                             princeEdwardIsland.cache ++
                             quebec.cache ++
                             saskatchewan.cache ++
                             yukon.cache)

  }

}
