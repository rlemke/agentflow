# AgentFlow AWS Lambda + Step Functions Agent
FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY pyproject.toml .
RUN pip install --no-cache-dir -e ".[mongodb]" || \
    pip install --no-cache-dir lark pymongo
RUN pip install --no-cache-dir boto3>=1.34.0

# Copy application code
COPY afl/ ./afl/
COPY examples/aws-lambda/ ./examples/aws-lambda/

WORKDIR /app/examples/aws-lambda

CMD ["python", "agent.py"]
